# template for "Stopwatch: The Game"

import simplegui
import math
import random
import time

# define global variables

time = 0
interval = 100
stime = "0:00.0"
good_stops = 0
total_stops = 0
d = 0
game_counter = str(good_stops) + "/" + str(total_stops)

# define helper function format that converts time
# in tenths of seconds into formatted string A:BC.D
def format(t):
    global time
    global stime
    global d

    a = time / 600 #should be right
    b = int(math.floor((time / 10 % 60) / 10)) #right
    c = ((time / 10 % 60) % 10) #???wrong
    d = int(time % 10) #right
    
    stime = str(a) + ":" + str(b) + str(c) + "." + str(d)
    return stime
    
# define event handlers for buttons; "Start", "Stop", "Reset"
def start_button():
    timer.start()

def stop_button():
    global good_stops, total_stops, game_counter
    if timer.is_running():
     timer.stop()
     total_stops += 1
     if d == 0:
            good_stops += 1
     else:
     #just for debugging fun print to the console
        good_stops += 0
     
     game_counter = str(good_stops) + "/" + str(total_stops)

def reset_button():
    global time, stime
    global good_stops, total_stops, game_counter
    #resets actual clock time
    time = 0
    #resets printed string time
    stime = "0:00:0"
    
    #resets game_counter
    good_stops = 0
    total_stops = 0
    game_counter = str(good_stops) + "/" + str(total_stops)
    return game_counter

# define event handler for timer with 0.1 sec interval
def tick():
    global time, stime
    time += 1
    
    format(time)

# define draw handler
def draw(canvas):
    canvas.draw_text(stime, [60, 110], 30, "FFFFFF")
    canvas.draw_text(game_counter, [150, 30], 18, "FFFFFF")
    
# create frame
frame = simplegui.create_frame("Stopwatch Game", 200, 200)

# register event handlers
frame.set_draw_handler(draw)
frame.add_button("Start", start_button, 150)
frame.add_button("Stop", stop_button, 150)
frame.add_button("Reset", reset_button, 150)
timer = simplegui.create_timer(interval, tick)

# start frame
frame.start()
timer.stop()
timer.is_running()

