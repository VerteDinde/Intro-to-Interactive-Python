# define helper function format that converts time
# in tenths of seconds into formatted string A:BC.D

import math

#format(0) = 0:00.0
#format(321) = 0:32:1
#format(613) = 1:01.3

def convert_time(time):
    a = time / 600 #this might be right
    b = int(math.floor((time / 10 % 60) / 10)) #this is right, but is B & C
    c = ((time % 60) / 10)
    d = time % 10 #this one is right
    
    return str(a) + ":" + str(b) + str(c) + "." + str(d)

print convert_time(0)
print convert_time(11)
print convert_time(321)
print convert_time(613)
print convert_time(715)
